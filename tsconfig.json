{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@family-office-tracker/core": ["./packages/core/src/index.js"]
    }
  },
  "include": [
    "packages/core/src/**/*.js",
    "apps/web/src/**/*.js",
    "apps/web/src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "apps/cli/**"
  ]
}
